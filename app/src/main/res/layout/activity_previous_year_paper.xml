<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PreviousYearPaper">

    <ImageView
        android:layout_width="190dp"
        android:layout_height="190dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="100dp"
        android:background="@drawable/gla"></ImageView>

    <TextView
        android:id="@+id/pyp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:background="#E3CC3C"
        android:gravity="center"
        android:text="PREVIOUS YEAR PAPER"
        android:textSize="30dp"></TextView>

    <Spinner
        android:id="@+id/pyp1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pyp"
        android:layout_marginTop="50dp"></Spinner>

    <Spinner
        android:id="@+id/pyp2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pyp1"
        android:layout_marginTop="50dp"></Spinner>

    <Button
        android:id="@+id/search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pyp2"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="70dp"
        android:text="Search"></Button>


</RelativeLayout>